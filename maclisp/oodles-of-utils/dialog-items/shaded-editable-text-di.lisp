(in-package :oou)(oou-provide :shaded-editable-text-di);*****************************************************************                                    ;; Copyright © 1991 Institut fuer Informatik, University of Basel, Switzerland ; All Rights Reserved;; Author: Dieter Holz;; adds a shade to the editable-text-dialog-item; ;; Changes (worth to be mentioned):; ------------------------------;; 1/10/92 Dieter : 'shaded-button-di' added.;;;*****************************************************************;*****************************************************************(oou-dependencies :unibas-macros                              :simple-view-ce                              )(export '(shaded-editable-text-di               ));---------------------------------------------------------------------------(defclass shaded-editable-text-di (editable-text-dialog-item)   ())(defmethod view-draw-contents :after ((self shaded-editable-text-di))    (when (wptr self)       (with-pen-pattern (*white-pattern* (view-container self))           (frame-rect (view-container self)                                (subtract-points (view-top-left self) #@(3 3))                               (add-points (view-bottom-right self) #@(3 3))))       (with-pen-pattern (*black-pattern* (view-container self))           (frame-rect-with-shade (view-container self)                                                   (subtract-points (view-top-left self) #@(3 3))                                                   (add-points (view-bottom-right self) #@(3 3))))))#|(make-instance 'window    :view-size #@(250 100)    :view-position '(:top 80)    :window-title "a shaded editable text"    :window-type :document    :view-subviews (list (make-instance 'shaded-editable-text-di                                          :view-size #@(100 18)                                          :view-position #@(30 30)                                          :dialog-item-text "see the shade" ))) |#