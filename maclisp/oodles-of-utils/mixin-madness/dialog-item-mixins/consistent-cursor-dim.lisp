(in-package :oou)(oou-provide :consistent-cursor-dim);*****************************************************************                                    ; ; Copyright © 1995 Institut fuer Informatik, University of Basel, Switzerland ; All Rights Reserved;; Author: Dieter Holz;; adding a consitent cursor shape behavior; ;;;*****************************************************************;*****************************************************************(oou-dependencies :unibas-cursors                              )(export '(consistent-cursor-dim));--------------------------------------------------------------------------(defclass full-hand-cursor-dim ()   ())(defmethod view-cursor  ((self full-hand-cursor-dim) point)   (declare (ignore point))   *full-hand-cursor*);---------------------------------------------------------------------------(defclass pointer-hand-cursor-dim ()   ())(defmethod view-cursor  ((self pointer-hand-cursor-dim) point)   (declare (ignore point))  *pointer-hand-cursor*);---------------------------------------------------------------------------#|(oou-dependencies :simple-view-ce)(defclass framed-view (view)   ())(defmethod view-draw-contents :after ((self framed-view))   (view-frame self))(defclass view-1 (full-hand-cursor-dim framed-view)   ())(defclass view-2 (pointer-hand-cursor-dim framed-view)   ())(make-instance 'window    :view-subviews (list (make-instance 'view-1                                          :view-size #@(50 50)                                          :view-position #@(10 10))                                      (make-instance 'view-2                                          :view-size #@(50 50)                                          :view-position #@(110 10)))    :window-title "Cursor Demo"    :window-type :document    :view-size #@(170 70)    :auto-position :centermainscreen)|#