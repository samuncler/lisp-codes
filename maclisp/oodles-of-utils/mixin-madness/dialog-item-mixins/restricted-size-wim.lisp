(in-package :oou)(oou-provide :restricted-size-wim);************************************************************************                                    ;; Copyright © 1995 Institut fuer Informatik, University of Basel, Switzerland ; All Rights Reserved;; Author: Dieter Holz;; mixin for windows to set upper and lower limits for the window size; ;; Changes (worth to be mentioned):; ------------------------------; none ;;************************************************************************;************************************************************************(export '()) (oou-dependencies );----------------------------------------------------------------------------------(defclass restricted-size-wim ()  ((min-size :initform #@(50 50)             :accessor min-size             :initarg :min-size)   (max-size :initform (make-point *screen-width* *screen-height*)             :accessor max-size             :initarg :max-size)   (size-limits :initform (make-record :rect))))(defmethod window-grow-rect ((self restricted-size-wim))  (with-slots (min-size max-size size-limits) self    (unless (handlep size-limits)      (setf size-limits (make-record :rect)))    (rset size-limits :rect.topleft min-size)    (rset size-limits :rect.bottomright max-size)    size-limits))          (defmethod window-close :after ((self restricted-size-wim))  (dispose-record (slot-value self 'size-limits)))#|(defclass restricted-size-win (restricted-size-wim window)  ())(make-instance 'restricted-size-win  :view-size #@(200 200)  :min-size #@(100 100)  :max-size #@(300 300))(make-instance 'restricted-size-win  :view-size #@(200 200)  :min-size #@(200 100)  :max-size #@(200 300))|#